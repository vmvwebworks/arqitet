<div id="message_<%= message.id %>" class="flex <%= message.user == current_user ? 'justify-end' : 'justify-start' %> mb-6">
  <div class="max-w-md lg:max-w-lg px-6 py-4 <%= message.user == current_user ? 'bg-gray-800 text-white' : 'bg-white text-gray-900' %>">
    <div class="flex items-center gap-3 mb-3">
      <span class="text-sm font-medium <%= message.user == current_user ? 'text-gray-300' : 'text-gray-600' %>">
        <%= message.user.full_name %>
      </span>
      <span class="text-sm <%= message.user == current_user ? 'text-gray-400' : 'text-gray-500' %>">
        <%= message.created_at.strftime("%H:%M") %>
      </span>
    </div>
    <div class="text-base leading-relaxed">
      <%= simple_format(message.body, {}, wrapper_tag: "div") %>
    </div>
  </div>
</div>
